{% extends 'wallet/page.j2' %}

{% block content %}
<div class="container-fluid">
  <h2 class="mb-4">Commission Reports</h2>

  <div class="mb-4">
    <a href="{{ url_for('wallet.admin_merchants') }}" class="btn btn-outline-secondary">Back to Merchants</a>
  </div>

  <!-- Stats Cards -->
  <div class="row mb-4">
    <div class="col-md-3">
      <div class="card h-100">
        <div class="card-body text-center">
          <h5 class="card-title text-muted">Total Commission</h5>
          <h2 class="text-primary">${{ "%.2f"|format(stats.total_commission|float) }}</h2>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card h-100">
        <div class="card-body text-center">
          <h5 class="card-title text-muted">This Month</h5>
          <h2 class="text-success">${{ "%.2f"|format(stats.month_commission|float) }}</h2>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card h-100">
        <div class="card-body text-center">
          <h5 class="card-title text-muted">Today</h5>
          <h2 class="text-info">${{ "%.2f"|format(stats.today_commission|float) }}</h2>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card h-100">
        <div class="card-body text-center">
          <h5 class="card-title text-muted">Total Transactions</h5>
          <h2>{{ stats.total_records }}</h2>
        </div>
      </div>
    </div>
  </div>

  <!-- Filters -->
  <div class="card mb-4">
    <div class="card-body">
      <form method="get" class="row g-3">
        <div class="col-md-3">
          <label class="form-label">Merchant</label>
          <select name="merchant_id" class="form-select">
            <option value="">All Merchants</option>
            {% for m in merchants %}
            <option value="{{ m.id }}" {% if request.args.get('merchant_id')|int == m.id %}selected{% endif %}>{{ m.name }}</option>
            {% endfor %}
          </select>
        </div>
        <div class="col-md-3">
          <label class="form-label">Currency</label>
          <select name="crypto" class="form-select">
            <option value="">All Currencies</option>
            <option value="BTC" {% if request.args.get('crypto') == 'BTC' %}selected{% endif %}>BTC</option>
            <option value="ETH" {% if request.args.get('crypto') == 'ETH' %}selected{% endif %}>ETH</option>
            <option value="USDT-TRC20" {% if request.args.get('crypto') == 'USDT-TRC20' %}selected{% endif %}>USDT-TRC20</option>
            <option value="XMR" {% if request.args.get('crypto') == 'XMR' %}selected{% endif %}>XMR</option>
            <option value="LTC" {% if request.args.get('crypto') == 'LTC' %}selected{% endif %}>LTC</option>
          </select>
        </div>
        <div class="col-md-2">
          <label class="form-label">From Date</label>
          <input type="date" name="from_date" class="form-control" value="{{ request.args.get('from_date', '') }}">
        </div>
        <div class="col-md-2">
          <label class="form-label">To Date</label>
          <input type="date" name="to_date" class="form-control" value="{{ request.args.get('to_date', '') }}">
        </div>
        <div class="col-md-2 d-flex align-items-end">
          <button type="submit" class="btn btn-primary me-2">Filter</button>
          <a href="{{ url_for('wallet.admin_commissions') }}" class="btn btn-outline-secondary">Reset</a>
        </div>
      </form>
    </div>
  </div>

  <!-- Commission Records Table -->
  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Commission Records</h5>
      <a href="{{ url_for('wallet.admin_export_commissions') }}?{{ request.query_string.decode() }}" class="btn btn-sm btn-outline-primary">
        Export CSV
      </a>
    </div>
    <div class="card-body">
      {% if records.items %}
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>Merchant</th>
              <th>Invoice</th>
              <th>TX Hash</th>
              <th>Currency</th>
              <th>Original Amount</th>
              <th>Commission Rate</th>
              <th>Commission</th>
              <th>Date</th>
            </tr>
          </thead>
          <tbody>
            {% for record in records.items %}
            <tr>
              <td>{{ record.id }}</td>
              <td>
                {% if record.merchant %}
                <a href="{{ url_for('wallet.admin_merchant_detail', merchant_id=record.merchant_id) }}">{{ record.merchant.name }}</a>
                {% else %}
                -
                {% endif %}
              </td>
              <td>{{ record.invoice_id or '-' }}</td>
              <td>
                {% if record.tx_hash %}
                <code title="{{ record.tx_hash }}">{{ record.tx_hash[:12] }}...</code>
                {% else %}
                -
                {% endif %}
              </td>
              <td>{{ record.crypto }}</td>
              <td>${{ "%.2f"|format(record.gross_amount|float) }}</td>
              <td>{{ record.commission_percent }}%{% if record.commission_fixed and record.commission_fixed > 0 %} + ${{ "%.2f"|format(record.commission_fixed|float) }}{% endif %}</td>
              <td class="text-success">${{ "%.2f"|format(record.commission_amount|float) }}</td>
              <td>{{ record.created_at.strftime('%Y-%m-%d %H:%M') if record.created_at else 'N/A' }}</td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      {% if records.pages > 1 %}
      <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
          {% if records.has_prev %}
          <li class="page-item">
            <a class="page-link" href="{{ url_for('wallet.admin_commissions', page=records.prev_num, **request.args) }}">Previous</a>
          </li>
          {% endif %}

          {% for page_num in records.iter_pages() %}
            {% if page_num %}
              <li class="page-item {% if page_num == records.page %}active{% endif %}">
                <a class="page-link" href="{{ url_for('wallet.admin_commissions', page=page_num, **request.args) }}">{{ page_num }}</a>
              </li>
            {% else %}
              <li class="page-item disabled"><span class="page-link">...</span></li>
            {% endif %}
          {% endfor %}

          {% if records.has_next %}
          <li class="page-item">
            <a class="page-link" href="{{ url_for('wallet.admin_commissions', page=records.next_num, **request.args) }}">Next</a>
          </li>
          {% endif %}
        </ul>
      </nav>
      {% endif %}
      {% else %}
      <p class="text-muted text-center">No commission records found.</p>
      {% endif %}
    </div>
  </div>
</div>
{% endblock %}
