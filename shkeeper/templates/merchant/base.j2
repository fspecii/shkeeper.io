<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% block title %}Dashboard{% endblock %} - TorPay Merchant</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Onest:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="{{ url_for('static', filename='css/torpay-merchant.css') }}">
  {% block extra_css %}{% endblock %}
</head>
<body class="torpay-merchant">
  <!-- Sidebar -->
  <nav class="torpay-sidebar">
    <div class="torpay-sidebar-header">
      <div class="torpay-logo">
        <div class="torpay-logo-icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 2L2 7l10 5 10-5-10-5z"/>
            <path d="M2 17l10 5 10-5"/>
            <path d="M2 12l10 5 10-5"/>
          </svg>
        </div>
        <span class="torpay-logo-text">TorPay</span>
      </div>
      {% if current_merchant %}
      <div class="torpay-merchant-name">{{ current_merchant.name }}</div>
      {% endif %}
    </div>

    <div class="torpay-nav">
      <div class="torpay-nav-section">
        <div class="torpay-nav-label">Main</div>
        <a href="{{ url_for('merchant_auth.dashboard') }}" class="torpay-nav-item {% if request.endpoint == 'merchant_auth.dashboard' %}active{% endif %}">
          <svg class="torpay-nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="3" width="7" height="7"/>
            <rect x="14" y="3" width="7" height="7"/>
            <rect x="14" y="14" width="7" height="7"/>
            <rect x="3" y="14" width="7" height="7"/>
          </svg>
          Dashboard
        </a>
        <a href="{{ url_for('merchant_auth.transactions') }}" class="torpay-nav-item {% if request.endpoint == 'merchant_auth.transactions' %}active{% endif %}">
          <svg class="torpay-nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="12" y1="1" x2="12" y2="23"/>
            <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>
          </svg>
          Transactions
        </a>
        <a href="{{ url_for('merchant_auth.balances') }}" class="torpay-nav-item {% if request.endpoint == 'merchant_auth.balances' %}active{% endif %}">
          <svg class="torpay-nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 12V7H5a2 2 0 0 1 0-4h14v4"/>
            <path d="M3 5v14a2 2 0 0 0 2 2h16v-5"/>
            <path d="M18 12a2 2 0 0 0 0 4h4v-4h-4z"/>
          </svg>
          Balances
        </a>
        <a href="{{ url_for('merchant_auth.payouts') }}" class="torpay-nav-item {% if request.endpoint == 'merchant_auth.payouts' %}active{% endif %}">
          <svg class="torpay-nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 2v4m0 12v4M4.93 4.93l2.83 2.83m8.48 8.48l2.83 2.83M2 12h4m12 0h4M4.93 19.07l2.83-2.83m8.48-8.48l2.83-2.83"/>
          </svg>
          Payouts
        </a>
      </div>

      <div class="torpay-nav-section">
        <div class="torpay-nav-label">Settings</div>
        <a href="{{ url_for('merchant_auth.api_keys') }}" class="torpay-nav-item {% if request.endpoint == 'merchant_auth.api_keys' %}active{% endif %}">
          <svg class="torpay-nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 2l-2 2m-7.61 7.61a5.5 5.5 0 1 1-7.778 7.778 5.5 5.5 0 0 1 7.777-7.777zm0 0L15.5 7.5m0 0l3 3L22 7l-3-3m-3.5 3.5L19 4"/>
          </svg>
          API Keys
        </a>
        <a href="{{ url_for('merchant_auth.settings') }}" class="torpay-nav-item {% if request.endpoint == 'merchant_auth.settings' %}active{% endif %}">
          <svg class="torpay-nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="3"/>
            <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"/>
          </svg>
          Settings
        </a>
      </div>

      <div class="torpay-nav-section">
        <div class="torpay-nav-label">Developer</div>
        <a href="{{ url_for('merchant_auth.integration') }}" class="torpay-nav-item {% if request.endpoint == 'merchant_auth.integration' %}active{% endif %}">
          <svg class="torpay-nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="16 18 22 12 16 6"/>
            <polyline points="8 6 2 12 8 18"/>
          </svg>
          Integration
        </a>
        <a href="{{ url_for('merchant_auth.docs') }}" class="torpay-nav-item {% if request.endpoint == 'merchant_auth.docs' %}active{% endif %}">
          <svg class="torpay-nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
            <polyline points="14 2 14 8 20 8"/>
            <line x1="16" y1="13" x2="8" y2="13"/>
            <line x1="16" y1="17" x2="8" y2="17"/>
            <polyline points="10 9 9 9 8 9"/>
          </svg>
          API Docs
        </a>
      </div>

      <div class="torpay-nav-logout">
        <a href="{{ url_for('merchant_auth.logout') }}" class="torpay-nav-item">
          <svg class="torpay-nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/>
            <polyline points="16 17 21 12 16 7"/>
            <line x1="21" y1="12" x2="9" y2="12"/>
          </svg>
          Logout
        </a>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="torpay-main">
    <header class="torpay-header">
      <h1 class="torpay-page-title">{% block page_title %}Dashboard{% endblock %}</h1>
      {% block header_actions %}{% endblock %}
    </header>

    {% for message in get_flashed_messages() %}
    <div class="torpay-alert torpay-alert-info torpay-animate">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="12" cy="12" r="10"/>
        <line x1="12" y1="16" x2="12" y2="12"/>
        <line x1="12" y1="8" x2="12.01" y2="8"/>
      </svg>
      <span>{{ message }}</span>
    </div>
    {% endfor %}

    {% block content %}{% endblock %}
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>
  {% block extra_js %}{% endblock %}
</body>
</html>
