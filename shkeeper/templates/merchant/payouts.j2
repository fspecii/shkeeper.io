{% extends 'merchant/base.j2' %}

{% block title %}Payouts{% endblock %}

{% block content %}
<!-- Request Payout Form -->
<div class="card mb-4">
  <div class="card-header">
    <h5 class="mb-0">Request Payout</h5>
  </div>
  <div class="card-body">
    {% if balances %}
    <form method="post" action="{{ url_for('merchant_auth.request_payout') }}">
      <div class="row">
        <div class="col-md-4 mb-3">
          <label class="form-label">Currency</label>
          <select name="crypto" class="form-select" required>
            {% for balance in balances %}
            <option value="{{ balance.crypto }}" {% if balance.available_balance and balance.available_balance > 0 %}{% else %}disabled{% endif %}>
              {{ balance.crypto }} - Available: ${{ "%.2f"|format(balance.available_balance|float) }}
            </option>
            {% endfor %}
          </select>
        </div>
        <div class="col-md-4 mb-3">
          <label class="form-label">Amount (USD)</label>
          <input type="number" name="amount" class="form-control" placeholder="0 = withdraw all" min="0" step="0.01">
          <small class="text-muted">Enter 0 to withdraw entire balance</small>
        </div>
        <div class="col-md-4 mb-3 d-flex align-items-end">
          <button type="submit" class="btn btn-success">Request Payout</button>
        </div>
      </div>
    </form>
    <p class="text-muted mt-2">
      <small>Make sure you have configured your payout addresses in <a href="{{ url_for('merchant_auth.settings') }}">Settings</a> before requesting a payout.</small>
    </p>
    {% else %}
    <p class="text-muted">No balance available for payout.</p>
    {% endif %}
  </div>
</div>

<!-- Payout History -->
<div class="card">
  <div class="card-header">
    <h5 class="mb-0">Payout History</h5>
  </div>
  <div class="card-body">
    {% if payouts.items %}
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>ID</th>
            <th>Currency</th>
            <th>Amount</th>
            <th>Destination</th>
            <th>Status</th>
            <th>TX Hash</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          {% for payout in payouts.items %}
          <tr>
            <td>{{ payout.id }}</td>
            <td>{{ payout.crypto }}</td>
            <td>${{ "%.2f"|format(payout.amount_fiat|float) }}</td>
            <td><code title="{{ payout.dest_address }}">{{ payout.dest_address[:20] }}...</code></td>
            <td>
              {% if payout.status.value == 'completed' %}
                <span class="badge bg-success">Completed</span>
              {% elif payout.status.value == 'pending' %}
                <span class="badge bg-warning">Pending</span>
              {% elif payout.status.value == 'approved' %}
                <span class="badge bg-info">Approved</span>
              {% elif payout.status.value == 'processing' %}
                <span class="badge bg-primary">Processing</span>
              {% elif payout.status.value == 'failed' %}
                <span class="badge bg-danger">Failed</span>
              {% elif payout.status.value == 'rejected' %}
                <span class="badge bg-danger">Rejected</span>
              {% else %}
                <span class="badge bg-secondary">{{ payout.status.value }}</span>
              {% endif %}
            </td>
            <td>
              {% if payout.tx_hash %}
              <code title="{{ payout.tx_hash }}">{{ payout.tx_hash[:20] }}...</code>
              {% else %}
              -
              {% endif %}
            </td>
            <td>{{ payout.created_at.strftime('%Y-%m-%d %H:%M') if payout.created_at else 'N/A' }}</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    {% if payouts.pages > 1 %}
    <nav aria-label="Page navigation">
      <ul class="pagination justify-content-center">
        {% if payouts.has_prev %}
        <li class="page-item">
          <a class="page-link" href="{{ url_for('merchant_auth.payouts', page=payouts.prev_num) }}">Previous</a>
        </li>
        {% endif %}

        {% for page_num in payouts.iter_pages() %}
          {% if page_num %}
            <li class="page-item {% if page_num == payouts.page %}active{% endif %}">
              <a class="page-link" href="{{ url_for('merchant_auth.payouts', page=page_num) }}">{{ page_num }}</a>
            </li>
          {% else %}
            <li class="page-item disabled"><span class="page-link">...</span></li>
          {% endif %}
        {% endfor %}

        {% if payouts.has_next %}
        <li class="page-item">
          <a class="page-link" href="{{ url_for('merchant_auth.payouts', page=payouts.next_num) }}">Next</a>
        </li>
        {% endif %}
      </ul>
    </nav>
    {% endif %}
    {% else %}
    <p class="text-muted text-center">No payout history yet.</p>
    {% endif %}
  </div>
</div>
{% endblock %}
